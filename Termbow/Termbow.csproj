<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>0.2.0</Version>
        <Title>Simple library for handling colors on the terminal.</Title>
        <Authors>Ravmn</Authors>
        <Copyright>GPLv3</Copyright>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/Ravmnn/Termbow</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="./"/>
        <None Include="../LICENSE" Pack="true" PackagePath="./"/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Fint" Version="0.4.0" />
    </ItemGroup>

</Project>
